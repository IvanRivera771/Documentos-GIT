Algoritmo AreaTrianguloyRectangulo
	
	Definir base, altura, areaTriangulo, areaRectangulo Como Real;
	
	Escribir "Ingrese el valor de la base";
	Leer base;
	Escribir "Ingrese el valor de la altura";
	Leer altura;
	
	areaTriangulo <- 0.5*base*altura;
	areaRectangulo <-  base*altura;
	
	Escribir "El area del Triàngulo es: ", areaTriangulo;
	Escribir "El area del Rectangulo es: ", areaRectangulo;
	
	
	
	
FinAlgoritmo
